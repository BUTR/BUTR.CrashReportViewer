@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized >
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <div class="navbar-nav mx-3">
                <NavLink href="profile" class="nav-item nav-link">Profile</NavLink>
                <AuthorizeView Roles="@($"{ApplicationRoles.Administrator}, {ApplicationRoles.Moderator}")">
                    <NotAuthorized Context="context2">
                        <NavLink href="mods" class="nav-item nav-link">Mods</NavLink>
                    </NotAuthorized>
                </AuthorizeView>
                <NavLink href="crash-reports-viewer" class="nav-item nav-link">Crash Reports</NavLink>
                <NavLink href="logout" class="nav-item nav-link">Logout</NavLink>
            </div>
        </nav>
    </Authorized>
</AuthorizeView>

<CascadingValue Value="@this">
    <CascadingValue Value="true" Name="IsDevice">
        <div class="app-container container">
            <div class="main-body">
                @Body
            </div>
        </div>
    </CascadingValue>
</CascadingValue>