@inherits LayoutComponentBase
@inject ILocalStorageService _localStorage

@if (LoggedIn)
{
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="navbar-nav">
            <NavLink href="Profile" class="nav-item nav-link">Profile</NavLink>
            <NavLink href="Mods" class="nav-item nav-link">Mods</NavLink>
            <NavLink href="CrashReportsViewer" class="nav-item nav-link">Crash Reports</NavLink>
            <NavLink href="Logout" class="nav-item nav-link">Logout</NavLink>
        </div>
    </nav>
}

<div class="container @(LoggedIn ? "bg-light" : "")">
    <div class="main-body">
        @Body
    </div>
</div>

@code {
    public bool LoggedIn { get; private set; }

    protected override async Task OnInitializedAsync()
    {
        LoggedIn = await _localStorage.ContainKeyAsync("user");
    }
}