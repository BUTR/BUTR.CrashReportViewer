@attribute [AllowAnonymous]
@inject NavigationManager _navigationManager

@code {
    protected override void OnInitialized()
    {
        if (_navigationManager.Uri.EndsWith("logout"))
            _navigationManager.NavigateTo($"{_navigationManager.BaseUri}login");
        else
            _navigationManager.NavigateTo($"{_navigationManager.BaseUri}login?returnUrl={Uri.EscapeDataString(_navigationManager.ToBaseRelativePath(_navigationManager.Uri))}");
    }
}